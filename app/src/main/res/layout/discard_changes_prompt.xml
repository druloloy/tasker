<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@android:color/transparent"
    android:backgroundTint="@android:color/transparent"
    app:cardCornerRadius="10dp"
    style="@style/Tasker">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tan"
        android:padding="20dp">

        <ImageView
            android:id="@+id/img_edit_item_prompt"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:src="@drawable/ic_undraw_throw_away_re_x60k" />

        <TextView
            android:id="@+id/text_edit_item_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_edit_item_prompt"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:text="Changes were not applied."
            android:textColor="@color/cafenoire"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_cancel_edit_item_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="12sp"
            android:backgroundTint="@color/apricot"
            android:textColor="@color/cafenoire"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_edit_item_prompt"/>

        <Button
            android:id="@+id/btn_okay_edit_item_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_edit_item_prompt"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:text="Continue anyway"
            android:textColor="@color/cafenoire"
            android:textSize="12sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>