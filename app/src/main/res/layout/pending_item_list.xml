<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="15dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        android:padding="10dp">


        <TextView
            android:id="@+id/pending_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:text="Task Title"
            android:textColor="@color/cafenoire"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:ignore="UnknownId" />
        <TextView
            android:id="@+id/pending_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pending_title"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20sp"
            android:text="Details"
            android:textColor="@color/cafenoire"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/pending_date_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pending_details"
            android:text="Date"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@color/cafenoire"/>
        <LinearLayout
            android:id="@+id/btn_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/pending_date_created"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradient_button">

            <ImageView
                android:id="@+id/archive_btn"
                android:layout_width="30dp"
                android:layout_height="23dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_archive"
                app:tint="@color/cafenoire" />
        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>